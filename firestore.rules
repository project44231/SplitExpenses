rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Games collection
    match /games/{gameId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Players collection
    match /players/{playerId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Buy-ins collection - check game ownership via gameId field
    match /buy_ins/{buyInId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Cash-outs collection - check game ownership via gameId field
    match /cash_outs/{cashOutId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Settlements collection - check game ownership via gameId field
    match /settlements/{settlementId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Game groups collection
    match /game_groups/{groupId} {
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow create: if isAuthenticated() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAuthenticated() && resource.data.userId == request.auth.uid;
    }
    
    // Expenses collection - check game ownership via gameId field
    match /expenses/{expenseId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Reconciliations collection - check game ownership via gameId field
    match /reconciliations/{reconciliationId} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
    }
    
    // Feedback collection - Allow anyone to submit feedback (including guests)
    match /feedback/{feedbackId} {
      // Allow anyone to create feedback (no authentication required)
      allow create: if request.resource.data.keys().hasAll(['userId', 'userName', 'userEmail', 'message', 'type'])
                    && request.resource.data.userName is string
                    && request.resource.data.userEmail is string
                    && request.resource.data.userEmail.matches('.*@.*')
                    && request.resource.data.message is string
                    && request.resource.data.message.size() >= 10;
      // Allow users to read their own feedback
      allow read: if isAuthenticated() && resource.data.userId == request.auth.uid;
      allow update, delete: if false; // Feedback is immutable once submitted
    }
  }
}
