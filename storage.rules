rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Feedback images - Allow guests (guest or guest_*) and authenticated users
    match /feedback_images/{userId}/{imageId} {
      // Allow guests (userId starts with 'guest') and authenticated users to upload
      allow write: if (userId.matches('guest(_.*)?') || 
                      (request.auth != null && request.auth.uid == userId))
                   && request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/.*');
      allow read: if true;  // Anyone can read feedback images
    }
    
    // Other storage paths (adjust as needed)
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
