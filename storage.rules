rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    
    // Feedback images - Allow anyone to upload (including guests)
    match /feedback_images/{userId}/{imageId} {
      // Allow anyone to upload feedback images with size restrictions
      allow write: if request.resource.size < 5 * 1024 * 1024  // Max 5MB
                   && request.resource.contentType.matches('image/.*');
      allow read: if request.auth != null;  // Only authenticated users can read
    }
    
    // Other storage paths (adjust as needed)
    match /{allPaths=**} {
      allow read, write: if request.auth != null;
    }
  }
}
